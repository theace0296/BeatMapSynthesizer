{
	"author": {
		"name": "Wyatt Sharber and Chase Rosendale"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/theace0296/BeatMapSynthesizer.git"
	},
	"license": "MIT",
	"description": "Beat Map Synthesizer",
	"build": {
		"appId": "beatmapsynthesizer.app",
		"artifactName": "${name}-${os}-${arch}-${version}.${ext}",
		"electronCompile": false,
		"win": {
			"target": "portable"
		},
		"publish": [
			{
				"provider": "generic",
				"url": "localhost",
				"owner": "TheAce0296",
				"releaseType": "draft"
			}
		],
		"files": [
			"**/*",
			"!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
			"!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
			"!**/node_modules/*.d.ts",
			"!**/node_modules/.bin",
			"!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
			"!.editorconfig",
			"!**/._*",
			"!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
			"!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
			"!**/{appveyor.yml,.travis.yml,circle.yml}",
			"!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
			"app.js",
			"preload.js",
			"renderer.js",
			"index.html",
			"build/css/docs.css",
			"build/css/flat-ui.css",
			"build/images/beatMapSynth_Banner.jpg",
			"build/scripts/beatmapsynth.exe",
			"build/scripts/cover.jpg",
			"build/scripts/ffmpeg.exe",
			"build/scripts/ffplay.exe",
			"build/scripts/ffprobe.exe",
			"build/scripts/models/HMM_easy.pkl",
			"build/scripts/models/HMM_easy_v2.pkl",
			"build/scripts/models/HMM_expert.pkl",
			"build/scripts/models/HMM_expert_v2.pkl",
			"build/scripts/models/HMM_expertPlus.pkl",
			"build/scripts/models/HMM_expertPlus_v2.pkl",
			"build/scripts/models/HMM_hard.pkl",
			"build/scripts/models/HMM_hard_v2.pkl",
			"build/scripts/models/HMM_normal.pkl",
			"build/scripts/models/HMM_normal_v2.pkl",
			"!*.map",
			"!*.njsproj",
			"!build/scripts/__pycache__",
			"!build/scripts/beatmapsynth.py",
			"!build/scripts/requirements.txt",
			"node_modules/flat-ui/**/*"
		]
	},
	"devDependencies": {
		"@jimp/types": "^0.13.0",
		"@types/node": "^8.0.14",
		"electron": "^9.0.0",
		"electron-builder": "^22.6.1",
		"typescript": "^3.2.2",
		"yarn": "^1.22.4"
	},
	"electronCompile": false,
	"main": "app.js",
	"name": "beat-map-synthesizer",
	"scripts": {
		"prebuild": "pyinstaller ./beatmapsynth.spec --distpath ./build/scripts",
		"build": "tsc --build && echo %npm_package_version% > ./dist/latest.txt",
		"clean": "tsc --build",
		"start": "electron .",
		"dist": "electron-builder -p always",
		"pack": "electron-builder"
	},
	"version": "0.4.0-dev",
	"dependencies": {
		"compare-versions": "3.6.0",
		"flat-ui": "^2.1.1",
		"fs-extra": "^9.0.0",
		"jimp": "^0.13.0",
		"music-metadata": "^6.4.0",
		"sanitize-filename": "^1.6.3"
	}
}
